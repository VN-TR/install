#---Variables
CREATED_TIME=`date '+%Y-%m-%d %H:%M:%S'`
CREATED_YEAR=`date '+%Y'`

#---Shell Command
# change ubuntu mirrors

# remove lock
sudo killall dpkg apt
sudo rm -rf /var/lib/dpkg/lock-fronted
sudo rm -rf /var/lib/dpkg/lock

# mkdir
mkdir -p ~/visionnav/log

# change source list
sudo mv /etc/apt/sources.list /etc/apt/sources.list.bak
sudo cp sources.list /etc/apt/sources.list

sudo sh -c '. /etc/lsb-release && echo "deb http://mirrors.tuna.tsinghua.edu.cn/ros/ubuntu/ $DISTRIB_CODENAME main" > /etc/apt/sources.list.d/ros-latest.list'
sudo apt-key adv --keyserver hkp://ha.pool.sks-keyservers.net:80 --recv-key F42ED6FBAB17C654

sudo apt-get update
sudo apt-get install -f -y
sudo apt-get upgrade -y

for var in {1..5..1}
do 
	echo -e "\033[34m 尝试安装依赖库 \033[0m" 
	sudo apt-get update
	sudo apt-get -y -f install
	sudo apt-get -y --fix-broken install
	sudo apt-get install -y python-rosinstall python-rosinstall-generator python-wstool build-essential vim ctags libopencv-* libncurses5-dev libgnome2-dev libgnomeui-dev libgtk2.0-dev libatk1.0-dev libbonoboui2-dev libcairo2-dev libx11-dev libxpm-dev libxt-dev python-dev python3-dev ruby-dev lua5.3 lua5.3-dev lua5.2 lua5.2-dev ssh qt5-default qtmultimedia5-dev net-tools python-rosdep ninja-build libsuitesparse-dev liblapack-dev libatlas-base-dev libgflags-dev google-mock libgoogle-glog-dev libboost-dev qtbase5-dev libqt5gui5 libqt5core5a libpcl-dev libcairo2-dev ros-melodic-desktop ros-melodic-map* ros-melodic-joy* ros-melodic-tf* ros-melodic-serial ros-melodic-navigation ros-melodic-roslaunch ros-melodic-rosbag ros-melodic-pcl-conversions ros-melodic-eigen-conversions ros-melodic-visualization-msgs ros-melodic-geometry-msgs ros-melodic-message-generation ros-melodic-nav-msgs ros-melodic-sensor-msgs ros-melodic-robot-state-publisher ros-melodic-message-runtime ros-melodic-rosunit
	if [ $? -eq 0 ]; then
		echo -e "\033[34m 依赖库安装成功 \033[0m"
	break
	fi
done
if [ $var -eq 5 ]; then
	echo -e "\033[31m 依赖库安装失败 \033[0m"
fi

sudo rosdep init
rosdep update

source /opt/ros/melodic/setup.bash

# setup serial port
sudo usermod -a -G dialout $USER
sudo chmod 666 /dev/ttyS0
sudo chmod 666 /dev/ttyS1

